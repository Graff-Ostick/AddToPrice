<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
     <table name="mdg_entity" resource="default" engine="innodb" comment="Mdg Entity">
         <column xsi:type="int" name="mdg_entity_id" unsigned="false" nullable="false" comment="Mdg Entity Id"/>
         <column xsi:type="varchar" name="name" comment="name"/>
         <column xsi:type="timestamp" name="created_at" default="CURRENT_TIMESTAMP" on_update="false"
                 comment="Created Datetime"/>
         <constraint xsi:type="primary" referenceId="PRIMARY">
             <column name="mdg_entity_id"/>
         </constraint>
     </table>
</schema>
