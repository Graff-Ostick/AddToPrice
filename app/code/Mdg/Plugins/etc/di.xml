<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Catalog\Model\Product">
        <plugin name="change_name_before"
                type="Mdg\Plugins\Plugin\Product"
                sortOrder="20"
                disabled="false"
        />
    </type>
    <type name="Mdg\Plugins\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="Mdg\Plugins\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">mdg_plugins_logger</argument>
            <argument name="handlers"  xsi:type="array">
                <item name="system" xsi:type="object">Mdg\Plugins\Logger\Handler</item>
            </argument>
        </arguments>
    </type>
</config>
