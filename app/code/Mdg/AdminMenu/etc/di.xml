            <argument name="collections" xsi:type="array">
                <item name="mdg_admin_menu_customentity_grid_list_data_source" xsi:type="string">Mdg\Models\Model\ResourceModel\MdgEntity\MdgEntity\Collection</item>
            </argument>
        </arguments>
    </type>
    <virtualType
        name="Mdg\Models\Model\ResourceModel\MdgEntity\MdgEntity\Collection"
        type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">mdg_entity</argument>
            <argument name="resourceModel" xsi:type="string">Mdg\Models\Model\ResourceModel\MdgEntity</argument>
        </arguments>
    </virtualType>
