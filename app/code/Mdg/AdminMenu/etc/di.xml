<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Mdg\AdminMenu\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="Mdg\AdminMenu\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">mdg_adminmenu_log</argument>
            <argument name="handlers" xsi:type="array">
                <item name="system" xsi:type="object">Mdg\AdminMenu\Logger\Handler</item>
            </argument>
        </arguments>
    </type>
<!--    <preference for="Mdg\Models\Api\Data\MdgEntityInterface" type="Mdg\Models\Model\MdgEntity" />-->
